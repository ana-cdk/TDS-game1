@page "{id:int}"
@model ProjetoGerenciamentoRestaurante.RazorPages.Pages.Produto.Details
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<style>
    .info{
        width: 600px;
        background-color: rgb(173, 171, 171);
        padding: 10px;
        border-radius: 5px;
        margin: auto;
    }
             
    h1{
        text-align: center;
        font-size: 35px;
    }

    .home{
        background-color: lightgray;
        text-align: center;
        flex: 1 1;
        padding: 30px 30px 30px 30px;
        height: 87vh;
    }
</style>

<div class="home">
<h1>Detalhes do Produto:</h1>
<h2> @Model.ProdutoModel.Nome</h2>

<div class="info">
    <p><strong>Categoria: </strong> @Model.ProdutoModel.Categoria!.Nome </p>
    <p><strong>Descrição: </strong> @Model.ProdutoModel.Descricao </p>
    <p><strong>Valor Unitário: R$</strong> @Model.ProdutoModel.Preco </p>
</div>

<p style="text-align:center"><a class="btn btn-primary" role="button" asp-page="Index"> <strong>Voltar</strong></a></p>
</div>
