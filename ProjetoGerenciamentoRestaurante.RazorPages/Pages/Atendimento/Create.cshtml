@page
@model ProjetoGerenciamentoRestaurante.RazorPages.Pages.Atendimento.Create

<style>
           .row{
                display: flex;
               justify-content: center;
           }
           
           h1{
            text-align: center;
            font-size: 35px;
           }

           .home{
            background-color: lightgray;
            text-align: center;
            flex: 1 1;
            padding: 30px 30px 30px 30px;
            height: 89vh;
           }

            .form-control{
                text-align: center;
                width: fit-content;
                
            }
           

</style>
<div class="home"><h1>Cadastrar Atendimento</h1>


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-dange"></div>
            <input type="hidden" asp-for="AtendimentoModel.AtendimentoId"/>
            <div class="form-group">
                @if(TempData["Mensagem"] != null)
                {
                <div class="alert alert-success">@TempData["Mensagem"]</div>
                }
           
            <select asp-for="AtendimentoModel.MesaId" class="form-select">
                <option value="">Selecione o n√∫mero da Mesa</option>
                @foreach (var mesaModel in Model.MesaList)
                {
                    <option value="@mesaModel.MesaId">@mesaModel.Numero</option>
                }
            </select>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Salvar"/>
                <a asp-page="/Atendimento/Index" class="btn btn-secondary"> Cancelar</a>
            </div>
        </form>
    </div>
</div>

</div>